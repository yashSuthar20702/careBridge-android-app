<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Theme -->
    <style name="Base.Theme.CareBridge" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Prevent header overlap with status bar -->
        <item name="android:fitsSystemWindows">true</item>

        <!-- System bar colors -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Icons dark on light background -->
        <item name="android:windowLightStatusBar">true</item>

        <!-- Primary / Accent Colors -->
<!--        <item name="colorPrimary">@color/primary_blue</item>-->
<!--        <item name="colorPrimaryContainer">@color/primary_blue_light</item>-->
<!--        <item name="colorSecondary">@color/status_active</item>-->
<!--        <item name="colorSecondaryContainer">@color/status_active</item>-->

        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Backgrounds -->
        <item name="android:windowBackground">@color/background_light</item>
    </style>

    <style name="Theme.CareBridge" parent="Base.Theme.CareBridge" />

    <!-- Custom CardView style for light theme -->
    <style name="CardView.Light">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>

</resources>
