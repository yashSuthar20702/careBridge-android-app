<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_patient_dashboard">

    <!-- Header Section: Patient welcome area with logout functionality -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/padding_large"
        android:elevation="@dimen/elevation_medium"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Patient information container with flexible width -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Welcome greeting text for patient -->
            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_back"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_large" />

            <!-- Patient name display with emphasis -->
            <TextView
                android:id="@+id/tvPatientName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/patient_name_placeholder"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_xlarge" />
        </LinearLayout>

        <!-- Logout action button with prominent styling -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHeaderLogout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height_standard"
            android:text="@string/logout"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/white"
            android:backgroundTint="@color/status_active"
            android:paddingHorizontal="@dimen/padding_xlarge"
            android:elevation="@dimen/elevation_medium"
            app:cornerRadius="@dimen/corner_radius_medium" />
    </LinearLayout>

    <!-- Main Content Area: Hosts different patient dashboard fragments via ViewPager -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Bottom Navigation: Primary navigation between patient dashboard sections -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:menu="@menu/bottom_nav_menu" />
</LinearLayout>