<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/padding_medium"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Upcoming Medicines Card: Displays scheduled medications for patients -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardCornerRadius="@dimen/corner_radius_large"
            app:cardElevation="@dimen/elevation_medium"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:padding="@dimen/padding_medium"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/upcoming_medicines_title"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/primary_blue"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/upcoming_medicines_content"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="@dimen/margin_small" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Medicine Status Card: Shows medication adherence tracking -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardCornerRadius="@dimen/corner_radius_large"
            app:cardElevation="@dimen/elevation_medium"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:padding="@dimen/padding_medium"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/medicine_status_title"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/primary_blue"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/medicine_status_content"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="@dimen/margin_small" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tips & Tricks Card: Provides healthcare recommendations and best practices -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/corner_radius_large"
            app:cardElevation="@dimen/elevation_medium"
            app:cardBackgroundColor="@color/primary_blue_light">

            <LinearLayout
                android:padding="@dimen/padding_medium"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/tips_tricks_title"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/tips_tricks_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/margin_small" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>