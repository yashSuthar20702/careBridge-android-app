<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main scrollable content area with pull-to-refresh functionality -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_medium"
        android:background="@color/bg_patient_dashboard">

        <LinearLayout
            android:id="@+id/mainContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <!-- Shimmer loading effect for initial content loading state -->
            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                app:shimmer_auto_start="true"
                app:shimmer_duration="1200">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_large">

                    <!-- Shimmer placeholder bars simulating content loading -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/shimmer_bar_height"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:background="@color/shimmer_placeholder" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/shimmer_bar_height"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:background="@color/shimmer_placeholder" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/shimmer_bar_height"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:background="@color/shimmer_placeholder" />
                </LinearLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>

            <!-- Statistics Cards: Display key patient metrics in a two-column layout -->
            <LinearLayout
                android:id="@+id/summaryCards"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginBottom="@dimen/margin_large">

                <!-- Assigned Patients Card: Shows total patients under care -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardAssignedPatients"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/margin_small"
                    app:cardCornerRadius="@dimen/corner_radius_large"
                    app:cardElevation="@dimen/elevation_medium"
                    app:cardBackgroundColor="@color/primary_blue_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_large"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvAssignedLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/assigned_patients_label"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvAssignedCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zero_count"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_xxlarge"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/margin_xsmall" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Active Patients Card: Shows currently active patient count -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardActivePatients"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/margin_small"
                    app:cardCornerRadius="@dimen/corner_radius_large"
                    app:cardElevation="@dimen/elevation_medium"
                    app:cardBackgroundColor="@color/primary_blue">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_large"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvActiveLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/active_patients_label"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvActiveCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zero_count"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_xxlarge"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/margin_xsmall" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Patients List Section: Container for dynamic patient list items -->
            <LinearLayout
                android:id="@+id/patientsSection"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/patients_list_title"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_large"
                    android:layout_marginBottom="@dimen/margin_small" />

                <LinearLayout
                    android:id="@+id/patientsListContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>
            </LinearLayout>

            <!-- Warning Card: Displays error messages for network or data loading issues -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardWarning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/corner_radius_xlarge"
                app:cardBackgroundColor="@color/white"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_medium"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/icon_size_medium"
                        android:layout_height="@dimen/icon_size_medium"
                        android:src="@drawable/ic_warning"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:contentDescription="@string/warning_icon_description"
                        app:tint="@color/warning_yellow" />

                    <TextView
                        android:id="@+id/tvWarningMessage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_medium"
                        android:text="@string/network_error_message" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>