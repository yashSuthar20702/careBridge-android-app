<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Left: Medicine Icon -->
        <ImageView
            android:id="@+id/imgMedicineIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_medication"
            android:layout_marginEnd="12dp"
            app:tint="@color/primary_blue" />

        <!-- Right: Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Medicine Name -->
            <TextView
                android:id="@+id/tvMedName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paracetamol"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium" />

            <!-- Dosage and Form -->
            <TextView
                android:id="@+id/tvMedDosage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500mg (Tablet)"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

            <!-- Time / Schedule -->
            <TextView
                android:id="@+id/tvMedTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Morning, Evening"
                android:textColor="@color/primary_blue"
                android:textSize="13sp"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium" />

            <!-- Duration -->
            <TextView
                android:id="@+id/tvMedDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="For 5 days"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:layout_marginTop="2dp" />

            <!-- Extra Instructions -->
            <TextView
                android:id="@+id/tvMedInstructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Take with warm water (With food)"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
