<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/myCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/margin_small"
    app:cardCornerRadius="@dimen/corner_radius_medium"
    app:cardBackgroundColor="@color/gray_light"
    app:strokeColor="@color/cardview_border"
    app:strokeWidth="@dimen/elevation_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_small"
        android:gravity="center_vertical">

        <!-- Left: Medicine Icon -->
        <ImageView
            android:id="@+id/imgMedicineIcon"
            android:layout_width="@dimen/icon_size_large"
            android:layout_height="@dimen/icon_size_large"
            android:src="@drawable/ic_pill"
            android:layout_marginEnd="@dimen/margin_small"
            app:tint="@color/primary_blue" />

        <!-- Right: Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/weight_one"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMedName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/medication_name_placeholder"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_medium"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/tvMedDosage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dosage_information_placeholder"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_small"
                android:layout_marginTop="@dimen/margin_xsmall" />

            <TextView
                android:id="@+id/tvMedTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/medication_time_placeholder"
                android:textColor="@color/primary_blue"
                android:textSize="@dimen/text_size_xsmall"
                android:layout_marginTop="@dimen/margin_xsmall"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/tvMedDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/duration_placeholder"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_xsmall"
                android:layout_marginTop="@dimen/margin_xsmall" />

            <TextView
                android:id="@+id/tvMedInstructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/instructions_placeholder"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_xsmall"
                android:layout_marginTop="@dimen/margin_xsmall"
                android:fontFamily="sans-serif" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>