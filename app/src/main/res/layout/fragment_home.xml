<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium"
            android:gravity="center_horizontal">

            <!-- ðŸ•’ DATE & TIME HEADER -->
            <LinearLayout
                android:id="@+id/timeContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingVertical="@dimen/padding_medium"
                android:background="@drawable/bg_gradient_header"
                android:paddingHorizontal="@dimen/header_padding_horizontal"
                android:elevation="@dimen/elevation_small"
                android:layout_marginBottom="@dimen/margin_medium"
                android:clipToOutline="true">

                <TextView
                    android:id="@+id/tvCurrentDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date_placeholder"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tvCurrentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time_placeholder"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_xxlarge"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/margin_xsmall" />
            </LinearLayout>

            <!-- ðŸ’Š TODAY'S MEDICINES -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/corner_radius_large"
                app:cardElevation="@dimen/elevation_medium"
                android:layout_marginBottom="@dimen/margin_medium"
                app:cardBackgroundColor="@color/input_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/todays_medicines"
                        android:textColor="@color/status_active"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/margin_small" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="@integer/weight_three"
                        android:gravity="center">

                        <!-- Assigned -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@integer/weight_one"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="@dimen/icon_size_large"
                                android:layout_height="@dimen/icon_size_large"
                                android:src="@drawable/ic_pill"
                                app:tint="@color/text_secondary"
                                android:layout_marginBottom="@dimen/margin_xsmall" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/assigned_label"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_size_small" />
                            <TextView
                                android:id="@+id/tvTotalMedicines"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/zero_count"
                                android:textColor="@color/text_primary"
                                android:textSize="@dimen/text_size_xlarge"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- Taken -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@integer/weight_one"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="@dimen/icon_size_large"
                                android:layout_height="@dimen/icon_size_large"
                                android:src="@drawable/ic_check"
                                app:tint="@color/status_active"
                                android:layout_marginBottom="@dimen/margin_xsmall" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/taken_label"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_size_small" />
                            <TextView
                                android:id="@+id/tvTakenMedicines"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/zero_count"
                                android:textColor="@color/status_active"
                                android:textSize="@dimen/text_size_xlarge"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- Remaining -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@integer/weight_one"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="@dimen/icon_size_large"
                                android:layout_height="@dimen/icon_size_large"
                                android:src="@drawable/ic_warning"
                                app:tint="@color/error_red"
                                android:layout_marginBottom="@dimen/margin_xsmall" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/remaining_label"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_size_small" />
                            <TextView
                                android:id="@+id/tvRemainingMedicines"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/zero_count"
                                android:textColor="@color/error_red"
                                android:textSize="@dimen/text_size_xlarge"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- â° UPCOMING MEDICATIONS -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/corner_radius_large"
                app:cardElevation="@dimen/elevation_medium"
                android:layout_marginBottom="@dimen/margin_medium"
                app:cardBackgroundColor="@color/input_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/upcoming_medications_title"
                        android:textColor="@color/status_active"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/margin_small" />

                    <TextView
                        android:id="@+id/tvNoMedicines"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/no_medicines_scheduled"
                        android:textColor="@color/text_secondary"
                        android:gravity="center"
                        android:padding="@dimen/padding_small"
                        android:visibility="gone" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvMedications"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:paddingBottom="@dimen/padding_small" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ðŸ—ºï¸ NEARBY CARE MAP -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/map_card_height"
                app:cardCornerRadius="@dimen/corner_radius_large"
                app:cardElevation="@dimen/elevation_medium"
                android:layout_marginBottom="@dimen/margin_medium"
                app:cardBackgroundColor="@color/input_background">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.gms.maps.MapView
                        android:id="@+id/mapView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <Button
                        android:id="@+id/btnOpenFullMap"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height_standard"
                        android:layout_gravity="bottom"
                        android:text="@string/view_full_map"
                        android:backgroundTint="@color/status_active"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-medium"
                        android:layout_margin="@dimen/margin_small"/>
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- ðŸ§  WELLNESS SECTION -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mental_wellness_tips"
                android:textColor="@color/status_active"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_large"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_gravity="start" />

            <!-- ðŸ’¡ DAILY TIP / VIDEO CARD -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDailyTip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                app:cardCornerRadius="@dimen/corner_radius_large"
                app:cardElevation="@dimen/elevation_large"
                app:cardBackgroundColor="@color/input_background"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/imgDailyType"
                            android:layout_width="@dimen/icon_size_large"
                            android:layout_height="@dimen/icon_size_large"
                            android:src="@drawable/ic_lightbulb"
                            app:tint="@color/status_active"
                            android:layout_marginEnd="@dimen/margin_small" />

                        <TextView
                            android:id="@+id/tvDailyHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/daily_tip_title"
                            android:textColor="@color/status_active"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Tip / Message -->
                    <TextView
                        android:id="@+id/tvDailyMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/daily_tip_default"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_medium"
                        android:layout_marginTop="@dimen/margin_small"
                        android:lineSpacingExtra="@dimen/line_spacing_medium" />

                    <!-- Video Player -->
                    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                        android:id="@+id/youtubePlayerView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/video_player_height"
                        android:layout_marginTop="@dimen/margin_small"
                        android:visibility="gone"
                        android:clipToOutline="true"
                        android:foreground="?attr/selectableItemBackground"/>

                    <!-- Tip Action / Optional Button -->
                    <LinearLayout
                        android:id="@+id/btnActionTip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/padding_medium"
                        android:paddingVertical="@dimen/padding_xsmall"
                        android:background="@drawable/bg_chip"
                        android:gravity="center"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/learn_more"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_small"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>