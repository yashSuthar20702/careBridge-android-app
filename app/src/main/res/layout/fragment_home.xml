<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/padding_medium"
    android:background="@color/bg_patient_dashboard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Medications Section: Displays upcoming medications in a recycler view -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large"
            app:cardCornerRadius="@dimen/corner_radius_xlarge"
            app:cardElevation="@dimen/elevation_large"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/upcoming_medications_title"
                    android:textColor="@color/accent_blue"
                    android:textSize="@dimen/text_size_xlarge"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/margin_medium" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvMedications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingBottom="@dimen/padding_small" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Health Tips Section: Provides wellness recommendations and advice -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large"
            app:cardCornerRadius="@dimen/corner_radius_xlarge"
            app:cardElevation="@dimen/elevation_large"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/health_tips_title"
                    android:textColor="@color/accent_blue"
                    android:textSize="@dimen/text_size_xlarge"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/margin_medium" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/health_tips_content"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_medium_large"
                    android:lineSpacingExtra="@dimen/line_spacing_medium" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Blogs & Videos Section: Mental health educational content -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large"
            app:cardCornerRadius="@dimen/corner_radius_xlarge"
            app:cardElevation="@dimen/elevation_large"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mental_health_content_title"
                    android:textColor="@color/accent_blue"
                    android:textSize="@dimen/text_size_xlarge"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/margin_medium" />

                <!-- Blog / Video Preview Item 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:background="@drawable/bg_rounded_white"
                    android:padding="@dimen/padding_medium">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/image_height_large"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_carebridge_logo"
                        android:contentDescription="@string/video_thumbnail_description"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:background="@color/shimmer_placeholder" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/meditation_video_title"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/margin_xsmall" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/meditation_video_description"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_medium" />
                </LinearLayout>

                <!-- Blog / Video Preview Item 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_rounded_white"
                    android:padding="@dimen/padding_medium">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/image_height_large"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_email"
                        android:contentDescription="@string/blog_thumbnail_description"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:background="@color/shimmer_placeholder" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/positivity_blog_title"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/margin_xsmall" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/positivity_blog_description"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_medium" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Daily Challenges Section: Wellness activity suggestions -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large"
            app:cardCornerRadius="@dimen/corner_radius_xlarge"
            app:cardElevation="@dimen/elevation_large"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/daily_wellness_title"
                    android:textColor="@color/accent_blue"
                    android:textSize="@dimen/text_size_xlarge"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/margin_medium" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/daily_wellness_content"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_medium_large"
                    android:lineSpacingExtra="@dimen/line_spacing_medium" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>