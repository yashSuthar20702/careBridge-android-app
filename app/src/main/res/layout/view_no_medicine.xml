<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/empty_medicine_card_margin"
    app:cardCornerRadius="@dimen/empty_medicine_card_corner_radius"
    app:cardElevation="@dimen/empty_medicine_card_elevation"
    app:cardBackgroundColor="@color/input_background"
    app:strokeColor="@color/shimmer_placeholder"
    app:strokeWidth="@dimen/empty_medicine_card_stroke_width"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/empty_medicine_card_padding">

        <ImageView
            android:layout_width="@dimen/empty_medicine_icon_width"
            android:layout_height="@dimen/empty_medicine_icon_height"
            android:layout_marginBottom="@dimen/empty_medicine_icon_margin_bottom"
            android:contentDescription="@string/medicine_icon_description"
            android:src="@drawable/ic_pill"
            app:tint="@color/primary_blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_medicine_card_message"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/empty_medicine_text_size"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="center" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>