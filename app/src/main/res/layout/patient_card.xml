<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/patientCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/patient_card_corner_radius"
    app:cardBackgroundColor="@color/input_background"
    app:strokeColor="@color/accent_blue"
    app:strokeWidth="@dimen/patient_card_stroke_width"
    app:cardElevation="@dimen/patient_card_elevation"
    android:layout_marginBottom="@dimen/padding_medium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/patient_card_padding">

        <!-- Header: Name + Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/patient_name_padding_bottom">

            <TextView
                android:id="@+id/tvPatientName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/patient_name_text_size"
                android:textStyle="bold"
                android:textAllCaps="false"/>

            <TextView
                android:id="@+id/tvPatientStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/status_padding_horizontal"
                android:paddingVertical="@dimen/status_padding_vertical"
                android:textSize="@dimen/status_text_size"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="top"
                android:background="@drawable/bg_status_active"
                android:clipToOutline="true"/>

        </LinearLayout>

        <!-- Role / Type -->
        <TextView
            android:id="@+id/tvPatientRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textColor="@color/accent_purple"
            android:textSize="@dimen/role_text_size"
            android:paddingBottom="@dimen/role_padding_bottom"/>

        <!-- Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Age Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/info_padding_vertical">

                <TextView
                    android:layout_width="@dimen/info_label_width"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="@dimen/info_text_size"
                    android:text="@string/patient_card_age_label"/>

                <TextView
                    android:id="@+id/tvPatientAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/info_text_size"/>
            </LinearLayout>

            <!-- Gender Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/info_padding_vertical">

                <TextView
                    android:layout_width="@dimen/info_label_width"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="@dimen/info_text_size"
                    android:text="@string/patient_card_gender_label"/>

                <TextView
                    android:id="@+id/tvPatientGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/info_text_size"/>
            </LinearLayout>

            <!-- Contact Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/info_padding_vertical">

                <TextView
                    android:layout_width="@dimen/info_label_width"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="@dimen/info_text_size"
                    android:text="@string/patient_card_contact_label"/>

                <TextView
                    android:id="@+id/tvPatientContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/info_text_size"/>
            </LinearLayout>

            <!-- Email Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/info_padding_vertical">

                <TextView
                    android:layout_width="@dimen/info_label_width"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="@dimen/info_text_size"
                    android:text="@string/patient_card_email_label"/>

                <TextView
                    android:id="@+id/tvPatientEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/info_text_size"/>
            </LinearLayout>

            <!-- Assigned Date Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/info_padding_vertical">

                <TextView
                    android:layout_width="@dimen/info_label_width"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="@dimen/info_text_size"
                    android:text="@string/patient_card_assigned_label"/>

                <TextView
                    android:id="@+id/tvPatientAssignedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/accent_purple"
                    android:textSize="@dimen/info_text_size"
                    android:textStyle="italic"/>
            </LinearLayout>

            <!-- Notes Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/info_padding_vertical">

                <TextView
                    android:layout_width="@dimen/info_label_width"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="@dimen/info_text_size"
                    android:text="@string/patient_card_notes_label"/>

                <TextView
                    android:id="@+id/tvPatientNotes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/info_text_size"
                    android:textStyle="italic"/>
            </LinearLayout>

            <!-- Single Add Meal Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddMeal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_meal_button"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/add_meal_button_margin_top"
                app:icon="@drawable/ic_add"
                app:iconPadding="@dimen/add_meal_button_icon_padding"
                app:iconTint="@color/white"
                app:iconGravity="textStart"
                android:backgroundTint="@color/accent_blue"
                android:textColor="@color/white"
                app:cornerRadius="@dimen/add_meal_button_corner_radius"
                android:paddingVertical="@dimen/add_meal_button_padding_vertical"/>

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>