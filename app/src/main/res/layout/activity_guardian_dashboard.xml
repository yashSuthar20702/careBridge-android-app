<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_patient_dashboard">

    <!-- Header Section: Contains welcome message and logout button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/input_background"
        android:padding="@dimen/padding_large"
        android:elevation="@dimen/elevation_medium"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Welcome Text Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Welcome greeting text -->
            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_back"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_large" />

            <!-- Guardian name display -->
            <TextView
                android:id="@+id/tvGuardianName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/guardian_name_placeholder"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_xlarge" />
        </LinearLayout>

        <!-- Logout action button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHeaderLogout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height_standard"
            android:text="@string/logout"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/white"
            android:backgroundTint="@color/accent_blue"
            android:paddingHorizontal="@dimen/padding_xlarge"
            android:elevation="@dimen/elevation_medium"
            app:cornerRadius="@dimen/corner_radius_medium" />
    </LinearLayout>

    <!-- Main Content Area: Hosts different dashboard sections via ViewPager -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerGuardian"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Bottom Navigation: Provides quick access to main app sections -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationGuardian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/input_background"
        app:itemIconTint="@color/nav_item_color_blue"
        app:itemTextColor="@color/nav_item_color_blue"
        app:menu="@menu/bottom_nav_guardian" />

</LinearLayout>