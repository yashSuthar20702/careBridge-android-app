<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Full Map -->
    <com.google.android.gms.maps.MapView
        android:id="@+id/fullMapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Header -->
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/input_background"
        android:padding="12dp"
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="top"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_back_arrow_blue"
            android:scaleType="centerInside"
            android:contentDescription="Back"/>

        <TextView
            android:layout_marginStart="12dp"
            android:text="Nearby Hospitals &amp; Medical Stores"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Bottom List -->
    <LinearLayout
        android:id="@+id/bottomListContainer"
        android:orientation="vertical"
        android:background="@color/gray_light"
        android:padding="16dp"
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/tvNearbyTitle"
            android:text="Nearby Places"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvNearbyPlaces"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</FrameLayout>
