<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/corner_radius_large"
    android:layout_marginBottom="@dimen/margin_medium"
    app:cardBackgroundColor="@color/input_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_medium">

        <TextView
            android:id="@+id/tvPatientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/patient_name_placeholder"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/primary_blue"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/margin_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="@integer/weight_three"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/weight_one"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/ivAssigned"
                    android:layout_width="@dimen/icon_size_large"
                    android:layout_height="@dimen/icon_size_large"
                    android:src="@drawable/ic_pill"
                    app:tint="@color/text_secondary"
                    android:layout_marginBottom="@dimen/margin_xsmall" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/assigned_label"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_small" />
                <TextView
                    android:id="@+id/tvTotalMedicines"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/medicine_count_placeholder"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_xlarge"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/weight_one"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/ivTaken"
                    android:layout_width="@dimen/icon_size_large"
                    android:layout_height="@dimen/icon_size_large"
                    android:src="@drawable/ic_check"
                    app:tint="@color/status_active"
                    android:layout_marginBottom="@dimen/margin_xsmall" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/taken_label"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_small" />
                <TextView
                    android:id="@+id/tvTakenMedicines"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/medicine_count_placeholder"
                    android:textColor="@color/status_active"
                    android:textSize="@dimen/text_size_xlarge"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@integer/weight_one"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/ivRemaining"
                    android:layout_width="@dimen/icon_size_large"
                    android:layout_height="@dimen/icon_size_large"
                    android:src="@drawable/ic_warning"
                    app:tint="@color/error_red"
                    android:layout_marginBottom="@dimen/margin_xsmall" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/remaining_label"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_small" />
                <TextView
                    android:id="@+id/tvRemainingMedicines"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/medicine_count_placeholder"
                    android:textColor="@color/error_red"
                    android:textSize="@dimen/text_size_xlarge"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>