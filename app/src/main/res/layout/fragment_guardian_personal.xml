<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:padding="@dimen/padding_medium"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_light">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_medium">

            <!-- ✅ Shimmer Placeholder -->
            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:shimmer_auto_start="true"
                app:shimmer_duration="@integer/shimmer_duration">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_medium"
                    app:cardCornerRadius="@dimen/corner_radius_xlarge"
                    app:cardElevation="@dimen/elevation_large"
                    app:strokeColor="@color/accent_blue"
                    app:strokeWidth="@dimen/dialog_stroke_width"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:padding="@dimen/padding_large"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/shimmer_bar_height"
                            android:layout_marginBottom="@dimen/margin_medium"
                            android:background="@color/shimmer_placeholder"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/shimmer_bar_height"
                            android:layout_marginBottom="@dimen/margin_medium"
                            android:background="@color/shimmer_placeholder"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/shimmer_bar_height"
                            android:layout_marginBottom="@dimen/margin_medium"
                            android:background="@color/shimmer_placeholder"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </com.facebook.shimmer.ShimmerFrameLayout>

            <!-- ✅ Warning / Error Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardWarning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/corner_radius_large"
                app:strokeWidth="@dimen/dialog_stroke_width"
                app:cardBackgroundColor="@color/input_background">

                <LinearLayout
                    android:padding="@dimen/padding_medium"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/icon_size_large"
                        android:layout_height="@dimen/icon_size_large"
                        android:src="@drawable/ic_warning"
                        android:layout_marginEnd="@dimen/margin_small"
                        app:tint="@color/warning_yellow"/>

                    <TextView
                        android:id="@+id/tvWarningMessage"
                        android:text="@string/guardian_load_error_message"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/text_primary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="@integer/weight_one"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ✅ Actual Card Content (updated inner UI) -->
            <LinearLayout
                android:id="@+id/cardContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- ✅ PERSONAL INFO CARD -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_medium"
                    app:cardCornerRadius="@dimen/corner_radius_xlarge"
                    app:cardElevation="@dimen/elevation_small"
                    app:strokeColor="@color/accent_blue"
                    app:strokeWidth="@dimen/dialog_stroke_width"
                    app:cardBackgroundColor="@color/input_background">

                    <LinearLayout
                        android:padding="@dimen/padding_large"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="@string/personal_info_title"
                            android:textSize="@dimen/text_size_xlarge"
                            android:textStyle="bold"
                            android:textColor="@color/accent_blue"
                            android:layout_marginBottom="@dimen/margin_large"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <!-- ✅ Row: Name -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/padding_xsmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="@string/full_name_label"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:textSize="@dimen/text_size_medium"
                                android:layout_width="@dimen/label_width"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/tvName"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_size_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <!-- ✅ Row: Type -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/padding_xsmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="@string/type_label"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:textSize="@dimen/text_size_medium"
                                android:layout_width="@dimen/label_width"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/tvType"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_size_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <!-- ✅ Row: Occupation -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/padding_xsmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="@string/occupation_label"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:textSize="@dimen/text_size_medium"
                                android:layout_width="@dimen/label_width"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/tvOccupation"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_size_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <!-- ✅ Row: Availability -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/padding_xsmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="@string/availability_label"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:textSize="@dimen/text_size_medium"
                                android:layout_width="@dimen/label_width"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/tvAvailability"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_size_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <!-- ✅ Row: Notes -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/padding_xsmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="@string/notes_label"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:textSize="@dimen/text_size_medium"
                                android:layout_width="@dimen/label_width"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/tvNotes"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_size_medium"
                                android:textStyle="italic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- ✅ CONTACT INFO CARD -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_medium"
                    app:cardCornerRadius="@dimen/corner_radius_xlarge"
                    app:cardElevation="@dimen/elevation_small"
                    app:strokeColor="@color/accent_purple"
                    app:strokeWidth="@dimen/dialog_stroke_width"
                    app:cardBackgroundColor="@color/input_background">

                    <LinearLayout
                        android:padding="@dimen/padding_large"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="@string/contact_info_title"
                            android:textSize="@dimen/text_size_xlarge"
                            android:textStyle="bold"
                            android:textColor="@color/accent_purple"
                            android:layout_marginBottom="@dimen/margin_large"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <!-- ✅ Row: Phone -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/padding_xsmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="@string/phone_label"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:textSize="@dimen/text_size_medium"
                                android:layout_width="@dimen/label_width"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/tvPhone"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_size_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <!-- ✅ Row: Email -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/padding_xsmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="@string/email_label"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:textSize="@dimen/text_size_medium"
                                android:layout_width="@dimen/label_width"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/tvEmail"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_size_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <!-- ✅ Row: Address -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/padding_xsmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="@string/address_label"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:textSize="@dimen/text_size_medium"
                                android:layout_width="@dimen/label_width"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/tvAddress"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_size_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>