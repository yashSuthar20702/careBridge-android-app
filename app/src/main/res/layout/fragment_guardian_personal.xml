<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_light">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginBottom="16dp">

            <!-- ✅ Shimmer Placeholder -->
            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:shimmer_auto_start="true"
                app:shimmer_duration="1200">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="12dp"
                    app:strokeColor="@color/accent_blue"
                    app:strokeWidth="1dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:padding="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:layout_marginBottom="14dp"
                            android:background="@color/shimmer_placeholder"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:layout_marginBottom="14dp"
                            android:background="@color/shimmer_placeholder"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:layout_marginBottom="14dp"
                            android:background="@color/shimmer_placeholder"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </com.facebook.shimmer.ShimmerFrameLayout>

            <!-- ✅ Warning / Error Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardWarning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="20dp"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@color/input_background">

                <LinearLayout
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_warning"
                        android:layout_marginEnd="12dp"
                        app:tint="@color/warning_yellow"/>

                    <TextView
                        android:id="@+id/tvWarningMessage"
                        android:text="Unable to load guardian info. Please check your connection and swipe down to retry."
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ✅ Actual Card Content (updated inner UI) -->
            <LinearLayout
                android:id="@+id/cardContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- ✅ PERSONAL INFO CARD -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="4dp"
                    app:strokeColor="@color/accent_blue"
                    app:strokeWidth="1dp"
                    app:cardBackgroundColor="@color/input_background">

                    <LinearLayout
                        android:padding="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Personal Info"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/accent_blue"
                            android:layout_marginBottom="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <!-- ✅ Row: Name -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:paddingVertical="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Name:"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/tvName"
                                android:textColor="@color/text_secondary"
                                android:textSize="16sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <!-- ✅ Row: Type -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:paddingVertical="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Type:"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/tvType"
                                android:textColor="@color/text_secondary"
                                android:textSize="16sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <!-- ✅ Row: Occupation -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:paddingVertical="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Occupation:"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/tvOccupation"
                                android:textColor="@color/text_secondary"
                                android:textSize="16sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <!-- ✅ Row: Availability -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:paddingVertical="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Availability:"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/tvAvailability"
                                android:textColor="@color/text_secondary"
                                android:textSize="16sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <!-- ✅ Row: Notes -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:paddingVertical="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Notes:"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/tvNotes"
                                android:textColor="@color/text_secondary"
                                android:textSize="16sp"
                                android:textStyle="italic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- ✅ CONTACT INFO CARD -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="4dp"
                    app:strokeColor="@color/accent_purple"
                    app:strokeWidth="1dp"
                    app:cardBackgroundColor="@color/input_background">

                    <LinearLayout
                        android:padding="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Contact Info"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/accent_purple"
                            android:layout_marginBottom="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <!-- ✅ Row: Phone -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:paddingVertical="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Phone:"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/tvPhone"
                                android:textColor="@color/text_secondary"
                                android:textSize="16sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <!-- ✅ Row: Email -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:paddingVertical="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Email:"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/tvEmail"
                                android:textColor="@color/text_secondary"
                                android:textSize="16sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <!-- ✅ Row: Address -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:paddingVertical="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Address:"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/tvAddress"
                                android:textColor="@color/text_secondary"
                                android:textSize="16sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
