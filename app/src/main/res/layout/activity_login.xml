<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:clipToPadding="false"
    android:background="@drawable/bg_gradient_login"
    android:paddingTop="@dimen/padding_xlarge"
    android:paddingBottom="@dimen/padding_xlarge">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="@dimen/padding_large">

        <!-- Logo -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="@dimen/logo_size_large"
            android:layout_height="@dimen/logo_size_large"
            android:src="@drawable/logo"
            android:contentDescription="@string/app_name"
            android:layout_marginBottom="@dimen/margin_medium"
            android:background="@drawable/bg_logo_shadow"
            android:padding="@dimen/padding_large" />

        <!-- App Title -->
        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/text_size_xxlarge"
            android:textStyle="bold"
            android:textColor="@color/login_text_white"
            android:letterSpacing="0.02"
            android:layout_marginBottom="@dimen/margin_small" />

        <!-- Tagline -->
        <TextView
            android:id="@+id/tvAppTagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_tagline"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/login_text_white"
            android:alpha="0.85"
            android:layout_marginBottom="@dimen/margin_xlarge" />

        <!-- Login Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/loginCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/corner_radius_xlarge"
            app:cardElevation="@dimen/elevation_large"
            app:cardBackgroundColor="@color/login_bg_card"
            android:layout_marginBottom="@dimen/margin_large">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_large">

                <!-- Welcome -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome_back"
                    android:textColor="@color/login_text_primary"
                    android:textSize="@dimen/text_size_xlarge"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/margin_small" />

                <!-- Login Subtitle -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_subtitle"
                    android:textColor="@color/login_text_secondary"
                    android:textSize="@dimen/text_size_xsmall"
                    android:layout_marginBottom="@dimen/margin_large" />

                <!-- Username Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilUsername"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:hint="@string/username"
                    app:startIconDrawable="@drawable/ic_person"
                    app:startIconTint="@color/login_icon_tint"
                    app:endIconTint="@color/login_icon_tint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:imeOptions="actionNext"
                        android:textColor="@color/login_text_primary"
                        android:textSize="@dimen/text_size_medium" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Password Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPassword"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_large"
                    android:hint="@string/password"
                    app:startIconDrawable="@drawable/ic_password"
                    app:startIconTint="@color/login_icon_tint"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/login_icon_tint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:imeOptions="actionDone"
                        android:textColor="@color/login_text_primary"
                        android:textSize="@dimen/text_size_medium" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Login Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height_large"
                    android:text="@string/sign_in"
                    android:textColor="@color/login_text_white"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"
                    app:cornerRadius="@dimen/corner_radius_large"
                    android:backgroundTint="@color/login_primary_blue"
                    android:icon="@drawable/ic_login"
                    app:iconGravity="textStart"
                    app:iconPadding="@dimen/padding_small" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Success Animation -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/successAnimation"
            android:layout_width="@dimen/animation_size_large"
            android:layout_height="@dimen/animation_size_large"
            android:layout_gravity="center"
            android:visibility="gone"
            app:lottie_rawRes="@raw/success_animation"
            app:lottie_autoPlay="false"
            app:lottie_loop="false" />

    </LinearLayout>
</ScrollView>
