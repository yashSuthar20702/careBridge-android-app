<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:backgroundTint="@color/input_background"
    android:clipToPadding="false"
    android:padding="@dimen/dialog_padding_outer"
    app:cardCornerRadius="@dimen/dialog_corner_radius"
    app:cardElevation="@dimen/dialog_elevation"
    app:strokeColor="@color/divider_gray"
    app:strokeWidth="@dimen/dialog_stroke_width"
    android:animateLayoutChanges="true"
    android:layoutAnimation="@anim/layout_fade_scale">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dialog_padding_inner">

        <!-- Dialog Title -->
        <TextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/logout_title"
            android:textSize="@dimen/dialog_title_text_size"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:paddingBottom="@dimen/dialog_title_padding_bottom"/>

        <!-- Dialog Message -->
        <TextView
            android:id="@+id/tvDialogMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/logout_confirmation"
            android:textSize="@dimen/dialog_message_text_size"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dialog_line_spacing"
            android:paddingBottom="@dimen/dialog_message_padding_bottom"/>

        <!-- Action Buttons Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Cancel Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/dialog_button_height"
                android:layout_weight="@integer/weight_one"
                android:text="@string/no_button"
                android:textAllCaps="false"
                android:textColor="@color/text_primary"
                android:backgroundTint="@android:color/transparent"
                app:strokeWidth="@dimen/dialog_button_stroke_width"
                app:strokeColor="@color/divider_gray"
                app:cornerRadius="@dimen/dialog_button_corner_radius"
                app:iconPadding="0dp"
                android:stateListAnimator="@null"/>

            <View
                android:layout_width="@dimen/dialog_button_spacing"
                android:layout_height="0dp" />

            <!-- Logout Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                android:layout_width="0dp"
                android:layout_height="@dimen/dialog_button_height"
                android:layout_weight="@integer/weight_one"
                android:text="@string/logout"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:backgroundTint="@color/accent_blue"
                app:cornerRadius="@dimen/dialog_button_corner_radius"
                android:stateListAnimator="@null"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>