<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light"
    tools:context=".view.AddMealActivity">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/background_light"
        android:paddingVertical="@dimen/padding_medium"
        android:paddingHorizontal="@dimen/padding_medium"
        android:elevation="@dimen/elevation_small">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/icon_size_large"
            android:layout_height="@dimen/icon_size_large"
            android:src="@drawable/ic_back_arrow"
            android:contentDescription="@string/back"
            android:padding="@dimen/padding_xsmall"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <TextView
            android:id="@+id/addMealTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/add_meal_title"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingHorizontal="@dimen/padding_medium"/>

        <View
            android:layout_width="@dimen/icon_size_medium"
            android:layout_height="@dimen/icon_size_medium"/>
    </LinearLayout>

    <!-- Patient Info Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/corner_radius_medium"
        app:cardBackgroundColor="@color/input_background"
        app:strokeColor="@color/accent_blue"
        app:strokeWidth="2dp"
        app:cardElevation="@dimen/elevation_small"
        android:layout_marginHorizontal="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium">

            <TextView
                android:id="@+id/tvPatientName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/margin_small"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date_label"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvMealDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_small"
                    android:layout_marginStart="@dimen/margin_small"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Current Meal Plan Card (Read-Only) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardCurrentMeal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:cardCornerRadius="@dimen/corner_radius_medium"
        app:cardBackgroundColor="@color/input_background"
        app:strokeColor="@color/accent_blue"
        app:strokeWidth="2dp"
        app:cardElevation="@dimen/elevation_small"
        android:layout_marginHorizontal="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_meal_plan"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:textColor="@color/accent_blue"
                android:layout_marginBottom="@dimen/margin_small"/>

            <TextView
                android:id="@+id/tvMorningCurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="@dimen/margin_xsmall"/>

            <TextView
                android:id="@+id/tvAfternoonCurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="@dimen/margin_xsmall"/>

            <TextView
                android:id="@+id/tvEveningCurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="@dimen/margin_xsmall"/>

            <TextView
                android:id="@+id/tvNightCurrent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Main Form Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="@dimen/padding_medium"
        android:paddingBottom="@dimen/padding_large"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Morning -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/morning"
                android:textColor="@color/accent_blue"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/margin_small"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/corner_radius_small"
                app:cardBackgroundColor="@color/input_background"
                app:strokeColor="@color/gray_200"
                app:strokeWidth="1dp"
                android:layout_marginBottom="@dimen/margin_medium">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="outline"
                    app:boxBackgroundColor="@color/input_background"
                    app:boxCornerRadiusTopStart="@dimen/corner_radius_small"
                    app:boxCornerRadiusTopEnd="@dimen/corner_radius_small"
                    app:boxCornerRadiusBottomStart="@dimen/corner_radius_small"
                    app:boxCornerRadiusBottomEnd="@dimen/corner_radius_small"
                    app:boxStrokeColor="@color/accent_blue"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/text_secondary"
                    app:hintEnabled="false"
                    android:padding="@dimen/padding_xsmall">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etMorning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/morning_hint"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_medium"
                        android:inputType="textMultiLine|textCapSentences"
                        android:maxLines="4"
                        android:minLines="3"
                        android:padding="@dimen/padding_small"/>
                </com.google.android.material.textfield.TextInputLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Afternoon -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/afternoon"
                android:textColor="@color/primary_blue"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/margin_small"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/corner_radius_small"
                app:cardBackgroundColor="@color/input_background"
                app:strokeColor="@color/gray_200"
                app:strokeWidth="1dp"
                android:layout_marginBottom="@dimen/margin_medium">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="outline"
                    app:boxBackgroundColor="@color/input_background"
                    app:boxCornerRadiusTopStart="@dimen/corner_radius_small"
                    app:boxCornerRadiusTopEnd="@dimen/corner_radius_small"
                    app:boxCornerRadiusBottomStart="@dimen/corner_radius_small"
                    app:boxCornerRadiusBottomEnd="@dimen/corner_radius_small"
                    app:boxStrokeColor="@color/accent_blue"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/text_secondary"
                    app:hintEnabled="false"
                    android:padding="@dimen/padding_xsmall">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAfternoon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/afternoon_hint"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_medium"
                        android:inputType="textMultiLine|textCapSentences"
                        android:maxLines="4"
                        android:minLines="3"
                        android:padding="@dimen/padding_small"/>
                </com.google.android.material.textfield.TextInputLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Evening -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/evening"
                android:textColor="@color/primary_blue"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/margin_small"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/corner_radius_small"
                app:cardBackgroundColor="@color/input_background"
                app:strokeColor="@color/gray_200"
                app:strokeWidth="1dp"
                android:layout_marginBottom="@dimen/margin_medium">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="outline"
                    app:boxBackgroundColor="@color/input_background"
                    app:boxCornerRadiusTopStart="@dimen/corner_radius_small"
                    app:boxCornerRadiusTopEnd="@dimen/corner_radius_small"
                    app:boxCornerRadiusBottomStart="@dimen/corner_radius_small"
                    app:boxCornerRadiusBottomEnd="@dimen/corner_radius_small"
                    app:boxStrokeColor="@color/accent_blue"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/text_secondary"
                    app:hintEnabled="false"
                    android:padding="@dimen/padding_xsmall">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEvening"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/evening_hint"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_medium"
                        android:inputType="textMultiLine|textCapSentences"
                        android:maxLines="4"
                        android:minLines="3"
                        android:padding="@dimen/padding_small"/>
                </com.google.android.material.textfield.TextInputLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Night -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:text="@string/night"
                android:textColor="@color/primary_blue"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/corner_radius_small"
                app:cardBackgroundColor="@color/white"
                app:strokeColor="@color/gray_200"
                app:strokeWidth="1dp"
                android:layout_marginBottom="@dimen/padding_large">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="outline"
                    app:boxBackgroundColor="@color/input_background"
                    app:boxCornerRadiusTopStart="@dimen/corner_radius_small"
                    app:boxCornerRadiusTopEnd="@dimen/corner_radius_small"
                    app:boxCornerRadiusBottomStart="@dimen/corner_radius_small"
                    app:boxCornerRadiusBottomEnd="@dimen/corner_radius_small"
                    app:boxStrokeColor="@color/accent_blue"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/text_secondary"
                    app:hintEnabled="false"
                    android:padding="@dimen/padding_xsmall">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/night_hint"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_medium"
                        android:inputType="textMultiLine|textCapSentences"
                        android:maxLines="4"
                        android:minLines="3"
                        android:padding="@dimen/padding_small"/>
                </com.google.android.material.textfield.TextInputLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/margin_small">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSubmit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:text="@string/submit"
                    android:textAllCaps="false"
                    android:textSize="@dimen/text_size_medium"
                    android:paddingVertical="@dimen/padding_medium"
                    app:cornerRadius="@dimen/corner_radius_medium"
                    app:icon="@drawable/ic_check"
                    app:iconTint="@color/white"
                    app:iconPadding="@dimen/padding_small"
                    app:iconGravity="textStart"
                    android:backgroundTint="@color/accent_blue"
                    android:textColor="@color/white"
                    app:rippleColor="@color/white"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnClear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/margin_small"
                    android:text="@string/clear"
                    android:textAllCaps="false"
                    android:textSize="@dimen/text_size_medium"
                    android:paddingVertical="@dimen/padding_medium"
                    app:cornerRadius="@dimen/corner_radius_medium"
                    app:icon="@drawable/ic_clear"
                    app:iconTint="@color/text_secondary"
                    app:iconPadding="@dimen/padding_small"
                    app:iconGravity="textStart"
                    android:backgroundTint="@color/input_background"
                    android:textColor="@color/text_secondary"
                    app:rippleColor="@color/text_secondary"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>