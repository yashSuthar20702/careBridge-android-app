<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".view.AddMealActivity">

    <!-- Header - Matches GuardianDashboardActivity style -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingVertical="16dp"
        android:paddingHorizontal="16dp"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_back_arrow"

            android:contentDescription="@string/back"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <TextView
            android:id="@+id/addMealTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/add_meal_title"
            android:textColor="@color/cardview_border"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingHorizontal="16dp"/>

        <!-- Spacer for alignment -->
        <View
            android:layout_width="24dp"
            android:layout_height="24dp"/>

    </LinearLayout>

    <!-- Patient Info Card - Similar to patient_card.xml styling -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/input_background"
        app:strokeColor="@color/accent_blue"
        app:strokeWidth="2dp"
        app:cardElevation="2dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvPatientName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date:"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvMealDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"/>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Main Form Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="16dp"
        android:paddingBottom="24dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Morning Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/morning"
                android:textColor="@color/accent_blue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/white"
                app:strokeColor="@color/gray_200"
                app:strokeWidth="1dp"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxStrokeColor="@color/gray_200"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/text_secondary"
                    app:hintEnabled="false"
                    android:padding="4dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etMorning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/morning_hint"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:inputType="textMultiLine|textCapSentences"
                        android:maxLines="4"
                        android:minLines="3"
                        android:padding="12dp"/>

                </com.google.android.material.textfield.TextInputLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Afternoon Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/afternoon"
                android:textColor="@color/primary_blue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/white"
                app:strokeColor="@color/gray_200"
                app:strokeWidth="1dp"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxStrokeColor="@color/gray_200"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/text_secondary"
                    app:hintEnabled="false"
                    android:padding="4dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAfternoon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/afternoon_hint"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:inputType="textMultiLine|textCapSentences"
                        android:maxLines="4"
                        android:minLines="3"
                        android:padding="12dp"/>

                </com.google.android.material.textfield.TextInputLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Evening Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/evening"
                android:textColor="@color/primary_blue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/white"
                app:strokeColor="@color/gray_200"
                app:strokeWidth="1dp"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxStrokeColor="@color/gray_200"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/text_secondary"
                    app:hintEnabled="false"
                    android:padding="4dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEvening"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/evening_hint"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:inputType="textMultiLine|textCapSentences"
                        android:maxLines="4"
                        android:minLines="3"
                        android:padding="12dp"/>

                </com.google.android.material.textfield.TextInputLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Night Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/night"
                android:textColor="@color/primary_blue"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/white"
                app:strokeColor="@color/gray_200"
                app:strokeWidth="1dp"
                android:layout_marginBottom="24dp">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxStrokeColor="@color/gray_200"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/text_secondary"
                    app:hintEnabled="false"
                    android:padding="4dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/night_hint"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:inputType="textMultiLine|textCapSentences"
                        android:maxLines="4"
                        android:minLines="3"
                        android:padding="12dp"/>

                </com.google.android.material.textfield.TextInputLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons - Matches your button styling -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="8dp">

                <!-- Submit Button - Matches status_active color -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSubmit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="@string/submit"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:paddingVertical="14dp"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_check"
                    app:iconTint="@color/white"
                    app:iconPadding="8dp"
                    app:iconGravity="textStart"
                    android:backgroundTint="@color/status_active"
                    android:textColor="@color/white"
                    app:rippleColor="@color/white"/>

                <!-- Clear Button - Secondary style -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnClear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="@string/clear"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:paddingVertical="14dp"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_clear"
                    app:iconTint="@color/text_secondary"
                    app:iconPadding="8dp"
                    app:iconGravity="textStart"
                    android:backgroundTint="@color/input_background"
                    android:textColor="@color/text_secondary"
                    app:rippleColor="@color/text_secondary"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>