<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_medium"
    android:layout_marginStart="@dimen/margin_small"
    android:layout_marginEnd="@dimen/margin_small"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:strokeColor="@color/accent_blue"
    app:strokeWidth="2dp"
    app:cardBackgroundColor="@color/input_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header: Guardian Name -->
        <TextView
            android:id="@+id/tvGuardianName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_primary"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Relationship Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Relationship:"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tvGuardianRelationship"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- Phone Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Phone:"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tvGuardianPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- Email Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tvGuardianEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Call Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCallGuardian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Call Guardian"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"
            app:icon="@drawable/ic_call"
            app:iconPadding="12dp"
            app:iconTint="@color/white"
            app:iconGravity="textStart"
            android:backgroundTint="@color/status_active"
            android:textColor="@color/white"
            app:cornerRadius="16dp"
            android:paddingVertical="12dp"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
