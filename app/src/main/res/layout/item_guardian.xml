<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp"
    app:strokeColor="@color/accent_blue"
    app:strokeWidth="1dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Guardian Name -->
        <TextView
            android:id="@+id/tvGuardianName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Guardian Relationship -->
        <TextView
            android:id="@+id/tvGuardianRelationship"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:layout_marginBottom="10dp" />

        <!-- Guardian Phone -->
        <TextView
            android:id="@+id/tvGuardianPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:layout_marginBottom="10dp" />

        <!-- Guardian Email -->
        <TextView
            android:id="@+id/tvGuardianEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Call Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCallGuardian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Call Guardian"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"
            app:icon="@drawable/ic_call"
            app:iconPadding="10dp"
            app:iconGravity="textStart"
            android:backgroundTint="@color/accent_blue"
            android:textColor="@color/white"
            app:cornerRadius="16dp"
            android:paddingVertical="12dp"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
