<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_medium"
    android:layout_marginStart="@dimen/margin_small"
    android:layout_marginEnd="@dimen/margin_small"
    app:cardCornerRadius="@dimen/corner_radius_xlarge"
    app:cardElevation="@dimen/elevation_medium"
    app:strokeColor="@color/accent_blue"
    app:strokeWidth="1dp"
    app:cardBackgroundColor="@color/white">

    <!-- Guardian card container with vertical information layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_large">

        <!-- Guardian Name: Primary identification with emphasized styling -->
        <TextView
            android:id="@+id/tvGuardianName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_xlarge"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/margin_small" />

        <!-- Guardian Relationship: Describes connection to the patient -->
        <TextView
            android:id="@+id/tvGuardianRelationship"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_size_medium"
            android:layout_marginBottom="@dimen/margin_small" />

        <!-- Guardian Phone: Contact number for communication -->
        <TextView
            android:id="@+id/tvGuardianPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_size_medium"
            android:layout_marginBottom="@dimen/margin_small" />

        <!-- Guardian Email: Electronic contact information -->
        <TextView
            android:id="@+id/tvGuardianEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_size_medium"
            android:layout_marginBottom="@dimen/margin_medium" />

        <!-- Call Button: Direct communication action with guardian -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCallGuardian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/call_guardian_button"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/margin_small"
            app:icon="@drawable/ic_call"
            app:iconPadding="@dimen/padding_small"
            app:iconGravity="textStart"
            android:backgroundTint="@color/accent_blue"
            android:textColor="@color/white"
            app:cornerRadius="@dimen/corner_radius_large"
            android:paddingVertical="@dimen/padding_small"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>