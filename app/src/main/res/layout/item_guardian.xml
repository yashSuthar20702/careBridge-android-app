<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_medium"
    android:layout_marginStart="@dimen/margin_small"
    android:layout_marginEnd="@dimen/margin_small"
    app:cardCornerRadius="@dimen/corner_radius_large"
    app:cardElevation="@dimen/elevation_medium"
    app:strokeColor="@color/accent_blue"
    app:strokeWidth="@dimen/elevation_small"
    app:cardBackgroundColor="@color/input_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_large">

        <!-- Header: Guardian Name -->
        <TextView
            android:id="@+id/tvGuardianName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_xlarge"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/margin_small" />

        <!-- Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Relationship Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/padding_xsmall">

                <TextView
                    android:layout_width="@dimen/label_width"
                    android:layout_height="wrap_content"
                    android:text="@string/relationship_label"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_medium"/>

                <TextView
                    android:id="@+id/tvGuardianRelationship"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_medium"/>
            </LinearLayout>

            <!-- Phone Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/padding_xsmall">

                <TextView
                    android:layout_width="@dimen/label_width"
                    android:layout_height="wrap_content"
                    android:text="@string/phone_label"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_medium"/>

                <TextView
                    android:id="@+id/tvGuardianPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_medium"/>
            </LinearLayout>

            <!-- Email Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/padding_xsmall"
                android:layout_marginBottom="@dimen/margin_small">

                <TextView
                    android:layout_width="@dimen/label_width"
                    android:layout_height="wrap_content"
                    android:text="@string/email_label"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_medium"/>

                <TextView
                    android:id="@+id/tvGuardianEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_medium"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Call Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCallGuardian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/call_guardian_button"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/margin_small"
            app:icon="@drawable/ic_call"
            app:iconPadding="@dimen/padding_small"
            app:iconTint="@color/white"
            app:iconGravity="textStart"
            android:backgroundTint="@color/status_active"
            android:textColor="@color/white"
            app:cornerRadius="@dimen/corner_radius_large"
            android:paddingVertical="@dimen/padding_small"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>