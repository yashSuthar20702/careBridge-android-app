<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main scrollable content area with pull-to-refresh capability -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_medium"
        android:background="@color/bg_patient_dashboard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_medium">

            <!-- Shimmer Placeholder: Loading animation while patient data is being fetched -->
            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:shimmer_auto_start="true"
                app:shimmer_duration="1200">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_medium"
                    app:cardCornerRadius="@dimen/corner_radius_xlarge"
                    app:cardElevation="@dimen/elevation_large"
                    app:strokeColor="@color/accent_blue"
                    app:strokeWidth="1dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_large">

                        <!-- Shimmer loading bars simulating content structure -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/shimmer_bar_height"
                            android:layout_marginBottom="@dimen/margin_small"
                            android:background="@color/shimmer_placeholder" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/shimmer_bar_height"
                            android:layout_marginBottom="@dimen/margin_small"
                            android:background="@color/shimmer_placeholder" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/shimmer_bar_height"
                            android:layout_marginBottom="@dimen/margin_small"
                            android:background="@color/shimmer_placeholder" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </com.facebook.shimmer.ShimmerFrameLayout>

            <!-- Warning / Error Card: Displays network or data loading issues -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardWarning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/corner_radius_xlarge"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_medium"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/icon_size_medium"
                        android:layout_height="@dimen/icon_size_medium"
                        android:src="@drawable/ic_warning"
                        android:contentDescription="@string/warning_icon_description"
                        android:layout_marginEnd="@dimen/margin_small"
                        app:tint="@color/warning_yellow" />

                    <TextView
                        android:id="@+id/tvWarningMessage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/network_error_retry_message"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_medium" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Actual Card Content: Patient information display sections -->
            <LinearLayout
                android:id="@+id/cardContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Personal Info Card: Basic patient identification and demographics -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_medium"
                    app:cardCornerRadius="@dimen/corner_radius_xlarge"
                    app:cardElevation="@dimen/elevation_small"
                    app:strokeColor="@color/accent_blue"
                    app:strokeWidth="1dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_large">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/personal_info_title"
                            android:textSize="@dimen/text_size_xlarge"
                            android:textStyle="bold"
                            android:textColor="@color/accent_blue"
                            android:layout_marginBottom="@dimen/margin_medium"/>

                        <TextView android:id="@+id/tvFullName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_medium_large"
                            android:layout_marginBottom="@dimen/margin_small"/>

                        <TextView android:id="@+id/tvPatientAge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_medium_large"
                            android:layout_marginBottom="@dimen/margin_small"/>

                        <TextView android:id="@+id/tvGender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_medium_large"
                            android:layout_marginBottom="@dimen/margin_small"/>

                        <TextView android:id="@+id/tvBloodType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_medium_large"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Medical Info Card: Health-related information and medical history -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_medium"
                    app:cardCornerRadius="@dimen/corner_radius_xlarge"
                    app:cardElevation="@dimen/elevation_small"
                    app:strokeColor="@color/accent_green"
                    app:strokeWidth="1dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_large">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/medical_info_title"
                            android:textSize="@dimen/text_size_xlarge"
                            android:textStyle="bold"
                            android:textColor="@color/accent_green"
                            android:layout_marginBottom="@dimen/margin_medium"/>

                        <TextView android:id="@+id/tvHeight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_medium_large"
                            android:layout_marginBottom="@dimen/margin_small"/>

                        <TextView android:id="@+id/tvWeight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_medium_large"
                            android:layout_marginBottom="@dimen/margin_small"/>

                        <TextView android:id="@+id/tvPastSurgeries"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_medium_large"
                            android:layout_marginBottom="@dimen/margin_small"/>

                        <TextView android:id="@+id/tvCurrentSymptoms"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_medium_large"
                            android:layout_marginBottom="@dimen/margin_small"/>

                        <TextView android:id="@+id/tvAllergies"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_medium_large"
                            android:layout_marginBottom="@dimen/margin_small"/>

                        <TextView android:id="@+id/tvConditions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_medium_large"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Contact Info Card: Patient contact details and current status -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/corner_radius_xlarge"
                    app:cardElevation="@dimen/elevation_small"
                    app:strokeColor="@color/accent_purple"
                    app:strokeWidth="1dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_large">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/contact_info_title"
                            android:textSize="@dimen/text_size_xlarge"
                            android:textStyle="bold"
                            android:textColor="@color/accent_purple"
                            android:layout_marginBottom="@dimen/margin_medium"/>

                        <TextView android:id="@+id/tvAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_medium_large"
                            android:layout_marginBottom="@dimen/margin_small"/>

                        <TextView android:id="@+id/tvContactNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_medium_large"
                            android:layout_marginBottom="@dimen/margin_small"/>

                        <TextView android:id="@+id/tvEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_medium_large"
                            android:layout_marginBottom="@dimen/margin_small"/>

                        <TextView android:id="@+id/tvStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_medium_large"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>