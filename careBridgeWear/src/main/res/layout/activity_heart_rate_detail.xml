<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <!-- Fixed Header -->
        <LinearLayout
            android:id="@+id/header_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/heart_rate_header_height"
            android:background="@color/black"
            android:gravity="center">

            <TextView
                android:id="@+id/heart_rate_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/heart_rate_title"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Scrollable Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/header_container"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_small"
                android:gravity="center_horizontal">

                <!-- Heart Icon and Value -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin_xsmall"
                    android:layout_marginBottom="@dimen/margin_xlarge">

                    <ImageView
                        android:id="@+id/heart_icon"
                        android:layout_width="@dimen/icon_size_xxlarge"
                        android:layout_height="@dimen/icon_size_xxlarge"
                        android:src="@drawable/ic_heart"
                        android:contentDescription="@string/heart_icon_desc"
                        app:tint="@color/red" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/margin_medium">

                        <TextView
                            android:id="@+id/heart_rate_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/heart_rate_value_placeholder"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_xxlarge"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/unit_bpm"
                            android:textColor="@color/gray_400"
                            android:textSize="@dimen/text_size_large"
                            android:layout_marginStart="@dimen/spacing_small" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/heart_rate_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/heart_rate_normal"
                        android:textColor="@color/green"
                        android:textSize="@dimen/text_size_medium"
                        android:layout_marginTop="@dimen/spacing_small" />

                </LinearLayout>

                <!-- Start Monitoring -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/start_monitoring_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height_large"
                    android:layout_marginStart="@dimen/margin_xxlarge"
                    android:layout_marginEnd="@dimen/margin_xxlarge"
                    android:layout_marginBottom="@dimen/margin_xlarge"
                    android:text="@string/start_monitoring"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold" />

                <!-- Sensor Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/margin_xlarge">

                    <View
                        android:id="@+id/sensor_indicator"
                        android:layout_width="@dimen/sensor_indicator_size"
                        android:layout_height="@dimen/sensor_indicator_size"
                        android:background="@drawable/circle_green"
                        android:layout_marginEnd="@dimen/margin_medium"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/sensor_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sensor_status"
                        android:textColor="@color/gray_400"
                        android:textSize="@dimen/text_size_small" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>
</layout>