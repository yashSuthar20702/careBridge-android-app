<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_large">

            <!-- Header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium">

                <ImageButton
                    android:id="@+id/heart_rate_back_button"
                    android:layout_width="@dimen/button_height_medium"
                    android:layout_height="@dimen/button_height_medium"
                    android:layout_alignParentStart="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_arrow_left"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/heart_rate_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/heart_rate_title"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold" />

            </RelativeLayout>

            <!-- Heart Icon and Value -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="@dimen/margin_xlarge">

                <ImageView
                    android:id="@+id/heart_icon"
                    android:layout_width="@dimen/icon_size_xxlarge"
                    android:layout_height="@dimen/icon_size_xxlarge"
                    android:src="@drawable/ic_heart"
                    app:tint="@color/red" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin_medium">

                    <TextView
                        android:id="@+id/heart_rate_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="72"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_xxlarge"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unit_bpm"
                        android:textColor="@color/gray_400"
                        android:textSize="@dimen/text_size_large"
                        android:layout_marginStart="@dimen/spacing_small" />

                </LinearLayout>

                <TextView
                    android:id="@+id/heart_rate_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/heart_rate_normal"
                    android:textColor="@color/green"
                    android:textSize="@dimen/text_size_medium"
                    android:layout_marginTop="@dimen/spacing_small" />

            </LinearLayout>

            <!-- Monitoring Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/start_monitoring_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_large"
                android:layout_marginHorizontal="@dimen/margin_xxlarge"
                android:layout_marginBottom="@dimen/margin_xlarge"
                android:text="@string/start_monitoring"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                app:cornerRadius="@dimen/card_corner_radius_large" />

            <!-- Sensor Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="@dimen/margin_xlarge">

                <View
                    android:id="@+id/sensor_indicator"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/circle_green"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/sensor_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sensor_status"
                    android:textColor="@color/gray_400"
                    android:textSize="@dimen/text_size_small" />

            </LinearLayout>

            <!-- Graph -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/heart_rate_graph"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/margin_medium" />

            <LinearLayout
                android:id="@+id/graph_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/graph_height"
                android:orientation="horizontal"
                android:gravity="bottom|center_horizontal"
                android:background="@color/gray_800"
                android:padding="@dimen/padding_medium"
                android:layout_marginBottom="@dimen/margin_xlarge" />

            <!-- Statistics -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/statistics"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/margin_medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginBottom="@dimen/margin_xlarge">

                <!-- Average -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/gray_800"
                    android:padding="@dimen/padding_medium"
                    android:layout_marginEnd="@dimen/spacing_small"
                    android:backgroundTint="@color/gray_800">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/average"
                        android:textColor="@color/gray_400"
                        android:textSize="8sp" />

                    <TextView
                        android:id="@+id/avg_heart_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="72"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/spacing_small" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unit_bpm"
                        android:textColor="@color/gray_400"
                        android:textSize="8sp" />

                </LinearLayout>

                <!-- Min -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/gray_800"
                    android:padding="@dimen/padding_medium"
                    android:layout_marginHorizontal="@dimen/spacing_small"
                    android:backgroundTint="@color/gray_800">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/min"
                        android:textColor="@color/gray_400"
                        android:textSize="8sp" />

                    <TextView
                        android:id="@+id/min_heart_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="65"
                        android:textColor="@color/blue_500"
                        android:textSize="8sp"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/spacing_small" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unit_bpm"
                        android:textColor="@color/gray_400"
                        android:textSize="8sp" />

                </LinearLayout>

                <!-- Max -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/gray_800"
                    android:padding="@dimen/padding_medium"
                    android:layout_marginStart="@dimen/spacing_small"
                    android:backgroundTint="@color/gray_800">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/max"
                        android:textColor="@color/gray_400"
                        android:textSize="8sp" />

                    <TextView
                        android:id="@+id/max_heart_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="82"
                        android:textColor="@color/red"
                        android:textSize="8sp"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/spacing_small" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unit_bpm"
                        android:textColor="@color/gray_400"
                        android:textSize="8sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Info Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/normal_heart_rate_range"
                android:textColor="@color/gray_400"
                android:textSize="@dimen/text_size_small"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_medium" />

        </LinearLayout>

    </ScrollView>
</layout>