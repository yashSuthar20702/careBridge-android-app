<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <ImageButton
                    android:id="@+id/heart_rate_back_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_arrow_left"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/heart_rate_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Heart Rate"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <!-- Heart Icon and Value -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/heart_icon"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/ic_heart"
                    app:tint="@color/red" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/heart_rate_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="72"
                        android:textColor="@color/white"
                        android:textSize="36sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BPM"
                        android:textColor="@color/gray_400"
                        android:textSize="16sp"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/heart_rate_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Normal"
                    android:textColor="@color/green"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Monitoring Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/start_monitoring_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="32dp"
                android:layout_marginBottom="16dp"
                android:text="Start Monitoring"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                app:cornerRadius="24dp" />

            <!-- Sensor Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <View
                    android:id="@+id/sensor_indicator"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/circle_green"
                    android:layout_marginEnd="8dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/sensor_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sensor Status"
                    android:textColor="@color/gray_400"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Graph -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heart Rate Graph"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/graph_container"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:gravity="bottom|center_horizontal"
                android:background="@color/gray_800"
                android:padding="8dp"
                android:layout_marginBottom="16dp" />

            <!-- Statistics -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Statistics"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginBottom="16dp">

                <!-- Average -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/gray_800"
                    android:padding="12dp"
                    android:layout_marginEnd="4dp"
                    android:backgroundTint="@color/gray_800">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Avg"
                        android:textColor="@color/gray_400"
                        android:textSize="8sp" />

                    <TextView
                        android:id="@+id/avg_heart_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="72"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BPM"
                        android:textColor="@color/gray_400"
                        android:textSize="8sp" />

                </LinearLayout>

                <!-- Min -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/gray_800"
                    android:padding="12dp"
                    android:layout_marginHorizontal="4dp"
                    android:backgroundTint="@color/gray_800">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Min"
                        android:textColor="@color/gray_400"
                        android:textSize="8sp" />

                    <TextView
                        android:id="@+id/min_heart_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="65"
                        android:textColor="@color/blue_500"
                        android:textSize="8sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BPM"
                        android:textColor="@color/gray_400"
                        android:textSize="8sp" />

                </LinearLayout>

                <!-- Max -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/gray_800"
                    android:padding="12dp"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="@color/gray_800">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Max"
                        android:textColor="@color/gray_400"
                        android:textSize="8sp" />

                    <TextView
                        android:id="@+id/max_heart_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="82"
                        android:textColor="@color/red"
                        android:textSize="8sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BPM"
                        android:textColor="@color/gray_400"
                        android:textSize="8sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Info Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal resting heart rate: 60-100 BPM"
                android:textColor="@color/gray_400"
                android:textSize="12sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </ScrollView>
</layout>