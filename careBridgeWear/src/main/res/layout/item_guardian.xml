<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_medium"
    app:cardCornerRadius="@dimen/card_corner_radius_small"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_large">

        <!-- Name Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/margin_medium">

            <ImageView
                android:id="@+id/icon_user"
                android:layout_width="@dimen/icon_size_large"
                android:layout_height="@dimen/icon_size_large"
                android:src="@drawable/ic_user"
                android:tint="@color/white"
                android:background="@color/black"
                android:padding="@dimen/spacing_small"
                android:layout_marginEnd="@dimen/margin_medium" />

            <TextView
                android:id="@+id/guardian_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/guardian_name_placeholder"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Details Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/spacing_small"
            android:paddingStart="24dp">

            <ImageView
                android:id="@+id/icon_heart"
                android:layout_width="@dimen/icon_size_small"
                android:layout_height="@dimen/icon_size_small"
                android:src="@drawable/ic_heart"
                android:tint="@color/gray_600"
                android:layout_marginEnd="@dimen/spacing_small" />

            <TextView
                android:id="@+id/guardian_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/guardian_details_placeholder"
                android:textColor="@color/gray_600"
                android:textSize="11sp" />

        </LinearLayout>

        <!-- Phone Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="24dp">

            <ImageView
                android:id="@+id/icon_phone"
                android:layout_width="@dimen/icon_size_small"
                android:layout_height="@dimen/icon_size_small"
                android:src="@drawable/ic_phone"
                android:tint="@color/gray_600"
                android:layout_marginEnd="@dimen/spacing_small" />

            <TextView
                android:id="@+id/guardian_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_placeholder"
                android:textColor="@color/gray_600"
                android:textSize="11sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>