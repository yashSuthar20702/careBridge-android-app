<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">

        <!-- Fixed Header -->
        <RelativeLayout
            android:id="@+id/fixed_header"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="@color/black">

            <TextView
                android:id="@+id/blood_oxygen_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/blood_oxygen_title"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <!-- Scrollable Content -->
        <ScrollView
            android:id="@+id/content_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/fixed_header"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="vertical"
            android:fadeScrollbars="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_large"
                android:paddingTop="@dimen/padding_small">

                <!-- Blood Oxygen Icon and Value -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/margin_xlarge">

                    <ImageView
                        android:layout_width="@dimen/icon_size_xxlarge"
                        android:layout_height="@dimen/icon_size_xxlarge"
                        android:src="@drawable/ic_droplet"
                        app:tint="@color/blue_500" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/margin_medium">

                        <TextView
                            android:id="@+id/blood_oxygen_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="98"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_xxlarge"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/unit_percent"
                            android:textColor="@color/gray_400"
                            android:textSize="@dimen/text_size_large"
                            android:layout_marginStart="@dimen/spacing_small" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/oxygen_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/blood_oxygen_status_normal"
                        android:textColor="@color/green"
                        android:textSize="@dimen/text_size_medium"
                        android:layout_marginTop="@dimen/spacing_small" />

                </LinearLayout>

                <!-- Status Description -->
                <TextView
                    android:id="@+id/status_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/blood_oxygen_status_normal_desc"
                    android:textColor="@color/gray_400"
                    android:textSize="@dimen/text_size_small"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/margin_xlarge"
                    android:paddingHorizontal="@dimen/padding_large" />

                <!-- Graph -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/recent_readings"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/margin_medium" />

                <LinearLayout
                    android:id="@+id/graph_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/graph_height"
                    android:orientation="horizontal"
                    android:gravity="bottom|center_horizontal"
                    android:background="@color/gray_800"
                    android:padding="@dimen/padding_medium"
                    android:layout_marginBottom="@dimen/margin_xlarge" />

                <!-- Normal Range -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/normal_range"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/margin_medium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/margin_xlarge">

                    <TextView
                        android:id="@+id/normal_range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/blood_oxygen_normal_range"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_medium"
                        android:layout_marginEnd="@dimen/margin_medium" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/healthy_spo2_levels"
                        android:textColor="@color/gray_400"
                        android:textSize="@dimen/text_size_small" />

                </LinearLayout>

                <!-- Measurement Tips -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/measurement_tips"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/margin_medium" />

                <TextView
                    android:id="@+id/measurement_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/blood_oxygen_measurement_tip"
                    android:textColor="@color/gray_400"
                    android:textSize="@dimen/text_size_small"
                    android:lineSpacingExtra="@dimen/spacing_small"
                    android:padding="@dimen/padding_medium"
                    android:background="@color/gray_800"
                    android:backgroundTint="@color/gray_800" />

                <!-- Info -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/blood_oxygen_info"
                    android:textColor="@color/gray_400"
                    android:textSize="@dimen/text_size_small"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_xlarge"
                    android:paddingHorizontal="@dimen/padding_large"
                    android:gravity="center" />

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</layout>



