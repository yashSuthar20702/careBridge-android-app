<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_medium"
    app:cardCornerRadius="@dimen/card_corner_radius_small"
    app:cardElevation="@dimen/card_elevation_small"
    app:cardBackgroundColor="@color/card_background_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_medium"
        android:baselineAligned="false">

        <!-- Label Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:baselineAligned="false"
            android:layout_marginBottom="@dimen/spacing_small">

            <ImageView
                android:id="@+id/info_icon"
                android:layout_width="@dimen/icon_size_xsmall"
                android:layout_height="@dimen/icon_size_xsmall"
                android:src="@drawable/ic_user"
                app:tint="@color/text_secondary"
                android:layout_marginEnd="@dimen/spacing_xsmall"
                android:contentDescription="@string/info_icon_desc" />

            <TextView
                android:id="@+id/info_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_placeholder"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_xsmall" />

        </LinearLayout>

        <!-- Value -->
        <TextView
            android:id="@+id/info_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/value_placeholder"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold"
            android:paddingStart="@dimen/indent_medium"
            android:paddingEnd="@dimen/indent_medium" />

    </LinearLayout>

</androidx.cardview.widget.CardView>