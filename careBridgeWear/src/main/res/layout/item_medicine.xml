<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/medicine_pending_bg"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical">

    <!-- Icon -->
    <ImageView
        android:id="@+id/medicine_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_pill"
        android:tint="@color/black"
        android:layout_marginEnd="12dp" />

    <!-- Left Column -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/medicine_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medicine Name"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/medicine_dosage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dosage"
            android:textColor="@color/gray_600"
            android:textSize="12sp" />

        <!-- MISSING FIELD â†’ NOW FIXED -->
        <TextView
            android:id="@+id/medicine_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="With food"
            android:textColor="@color/gray_600"
            android:textSize="11sp"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

    <!-- Right Column -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:id="@+id/medicine_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/status_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_circle"
            android:tint="@color/gray_600"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</LinearLayout>
