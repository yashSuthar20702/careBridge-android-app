<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/medicine_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black"
        android:padding="@dimen/padding_large">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/medicine_header_height"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_xsmall"
            android:paddingStart="@dimen/padding_medium"
            android:paddingEnd="@dimen/padding_medium">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/medicine"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <!-- No Medicine / No Internet Text -->
        <TextView
            android:id="@+id/no_medicine_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_medicine_found"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:paddingTop="@dimen/padding_small"
            android:paddingBottom="@dimen/padding_small"/>

        <!-- Medicine List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/medicine_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingTop="@dimen/padding_medium"
            android:paddingBottom="@dimen/padding_medium"/>

    </LinearLayout>
</layout>