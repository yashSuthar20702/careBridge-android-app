<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/health_monitor_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black"
        android:padding="16dp">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp">

            <ImageButton
                android:id="@+id/health_monitor_back_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_left"
                android:tint="@color/white"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health Monitor"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <!-- Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingTop="8dp">

                <!-- Heart Rate Display -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/heart_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_heart"
                        android:tint="@color/gray_400"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/heart_rate_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="72 BPM"
                        android:textColor="@color/white"
                        android:textSize="32sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/heart_rate_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Normal"
                        android:textColor="@color/green_400"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- Monitor Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/monitor_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Monitoring"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="12dp"
                    app:cornerRadius="20dp"
                    app:backgroundTint="@color/green_500"
                    android:layout_marginBottom="16dp"/>

                <!-- Sensor Status -->
                <LinearLayout
                    android:id="@+id/sensor_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginBottom="16dp">

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/circle_green"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:id="@+id/sensor_status_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Live Sensor Data"
                        android:textColor="@color/green_400"
                        android:textSize="10sp"/>
                </LinearLayout>

                <!-- Health Metrics Grid -->
                <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:paddingHorizontal="8dp"
                    app:columnOrderPreserved="false"
                    app:rowOrderPreserved="false">

                    <!-- Blood Oxygen -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/health_metric_bg"
                        android:padding="12dp"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        app:layout_column="0"
                        app:layout_row="0"
                        android:layout_margin="4dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_droplet"
                            android:tint="@color/blue_400"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/blood_oxygen_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="98%"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SpO2"
                            android:textColor="@color/gray_400"
                            android:textSize="10sp"/>
                    </LinearLayout>

                    <!-- Steps -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/health_metric_bg"
                        android:padding="12dp"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        app:layout_column="1"
                        app:layout_row="0"
                        android:layout_margin="4dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_footprints"
                            android:tint="@color/purple_400"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/steps_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3,542"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Steps"
                            android:textColor="@color/gray_400"
                            android:textSize="10sp"/>
                    </LinearLayout>

                    <!-- Calories -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/health_metric_bg"
                        android:padding="12dp"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        app:layout_column="0"
                        app:layout_row="1"
                        android:layout_margin="4dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_flame"
                            android:tint="@color/orange_400"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/calories_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="385"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cal"
                            android:textColor="@color/gray_400"
                            android:textSize="10sp"/>
                    </LinearLayout>

                    <!-- Activity Level -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/health_metric_bg"
                        android:padding="12dp"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        app:layout_column="1"
                        app:layout_row="1"
                        android:layout_margin="4dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_activity"
                            android:tint="@color/green_400"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/activity_level_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Medium"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Active"
                            android:textColor="@color/gray_400"
                            android:textSize="10sp"/>
                    </LinearLayout>

                </androidx.gridlayout.widget.GridLayout>

                <!-- Last Update Time -->
                <TextView
                    android:id="@+id/last_update_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last updated: Just now"
                    android:textColor="@color/gray_600"
                    android:textSize="10sp"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"/>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>