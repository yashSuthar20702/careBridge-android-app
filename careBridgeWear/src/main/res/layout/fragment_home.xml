<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="@color/bg_patient_dashboard"
    android:focusable="true"
    android:clickable="true"
    android:focusableInTouchMode="true">

    <!-- Clock at Top -->
    <TextView
        android:id="@+id/tv_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:focusable="false"
        android:clickable="false" />

    <!-- Main Content Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:focusable="false"
        android:clickable="false">

        <!-- Responsive Round Button -->
        <ImageButton
            android:id="@+id/btn_main_action"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/round_button_bg"
            android:scaleType="centerInside"
            android:contentDescription="@string/main_action"
            android:focusable="false"
            android:clickable="true" />

        <!-- Label with proper spacing -->
        <TextView
            android:id="@+id/tv_button_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/call"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:focusable="false"
            android:clickable="false" />

    </LinearLayout>

    <!-- Rounded Page Indicators -->
    <LinearLayout
        android:id="@+id/page_indicators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:focusable="false"
        android:clickable="false" />

</RelativeLayout>