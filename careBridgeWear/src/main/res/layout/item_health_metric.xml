<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/metric_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/container_height_metric"
    android:layout_marginVertical="@dimen/spacing_small"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal"
    android:padding="@dimen/padding_small"
    android:background="@drawable/health_metric_bg"
    android:gravity="center_vertical"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:baselineAligned="false">

    <!-- Selection Indicator -->
    <View
        android:id="@+id/selection_cursor"
        android:layout_width="@dimen/cursor_width"
        android:layout_height="match_parent"
        android:background="@color/text_white"
        android:alpha="@dimen/alpha_high"
        android:layout_marginEnd="@dimen/spacing_xsmall"
        android:visibility="gone" />

    <!-- Icon Container -->
    <FrameLayout
        android:layout_width="@dimen/icon_container_size"
        android:layout_height="@dimen/icon_container_size"
        android:layout_marginEnd="@dimen/spacing_xsmall">

        <View
            android:id="@+id/icon_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_bg"
            android:alpha="@dimen/alpha_low" />

        <ImageView
            android:id="@+id/metric_icon"
            android:layout_width="@dimen/icon_size_small"
            android:layout_height="@dimen/icon_size_small"
            android:layout_gravity="center"
            app:tint="@color/text_white"
            android:contentDescription="@string/metric_icon_desc" />

    </FrameLayout>

    <!-- Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="@dimen/layout_weight_full"
        android:orientation="vertical"
        android:baselineAligned="false">

        <!-- Label -->
        <TextView
            android:id="@+id/metric_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/heart_rate_label"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_xsmall"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Value and Unit -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/spacing_xxsmall"
            android:baselineAligned="false">

            <TextView
                android:id="@+id/metric_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/metric_value_placeholder"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                android:maxLines="1" />

            <TextView
                android:id="@+id/metric_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unit_bpm"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_xxsmall"
                android:layout_marginStart="@dimen/spacing_xxsmall"
                android:maxLines="1" />

        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/metric_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/real_time"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_size_xxxsmall"
            android:layout_marginTop="@dimen/spacing_xxsmall"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- Arrow Icon -->
    <ImageView
        android:id="@+id/arrow_icon"
        android:layout_width="@dimen/icon_size_xsmall"
        android:layout_height="@dimen/icon_size_xsmall"
        android:src="@drawable/ic_arrow_right"
        app:tint="@color/text_secondary"
        android:layout_marginStart="@dimen/spacing_small"
        android:contentDescription="@string/arrow_icon_desc" />

</LinearLayout>