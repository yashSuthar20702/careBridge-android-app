<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/metric_container"
    android:layout_width="160dp"
    android:layout_height="70dp"
    android:layout_marginVertical="4dp"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@drawable/health_metric_bg"
    android:gravity="center_vertical"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <!-- Selection Indicator (Cursor) - Initially hidden -->
    <View
        android:id="@+id/selection_cursor"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:alpha="0.9"
        android:layout_marginEnd="6dp"
        android:visibility="gone" />

    <!-- Icon Container -->
    <FrameLayout
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="6dp">

        <View
            android:id="@+id/icon_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_bg"
            android:alpha="0.2" />

        <ImageView
            android:id="@+id/metric_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            app:tint="@color/white" />

    </FrameLayout>

    <!-- Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Label -->
        <TextView
            android:id="@+id/metric_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heart Rate"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Value and Unit -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="1dp">

            <TextView
                android:id="@+id/metric_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="72"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="1" />

            <TextView
                android:id="@+id/metric_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BPM"
                android:textColor="@color/white"
                android:textSize="9sp"
                android:layout_marginStart="2dp"
                android:maxLines="1" />

        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/metric_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Real-time"
            android:textColor="@color/gray_400"
            android:textSize="8sp"
            android:layout_marginTop="1dp"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- Arrow Icon -->
    <ImageView
        android:id="@+id/arrow_icon"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_arrow_right"
        app:tint="@color/gray_400"
        android:layout_marginStart="4dp" />

</LinearLayout>