<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- MAIN APP THEME -->
    <style name="Theme.CareBridgeWear" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colors -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/gray_900</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/gray_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Custom buttons -->
        <item name="materialButtonStyle">@style/CareBridgeWearButton</item>
        <item name="buttonStyle">@style/CareBridgeWearButton</item>

        <!-- Default dialog theme -->
        <item name="alertDialogTheme">@style/CareBridgeAlertDialogTheme</item>
    </style>

    <!-- NO ACTION BAR THEME -->
    <style name="Theme.CareBridgeWear.NoActionBar" parent="Theme.CareBridgeWear">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <!-- CUSTOM BUTTON STYLE -->
    <style name="CareBridgeWearButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/wear_button_primary</item>
        <item name="backgroundTint">@null</item>
        <item name="android:foreground">@null</item>

        <item name="android:minHeight">0dp</item>

        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <!-- FIXED ALERT DIALOG THEME (Wear OS Compatible) -->
    <style name="CareBridgeAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- No shapeAppearanceOverlay here (this fixed your error) -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:background">@color/gray_900</item>
    </style>

    <style name="WearDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:backgroundDimAmount">1.0</item>
        <item name="android:windowIsFloating">true</item>

        <!-- REMOVE WHITE BACKGROUND -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>


    <style name="Theme.CareBridgeWear.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.CareBridgeWear.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>