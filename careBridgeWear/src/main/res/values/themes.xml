<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- MAIN APP THEME -->
    <style name="Theme.CareBridgeWear" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colors -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/gray_900</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/gray_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Custom buttons -->
        <item name="materialButtonStyle">@style/CareBridgeWearButton</item>
        <item name="buttonStyle">@style/CareBridgeWearButton</item>

        <!-- Default dialog theme -->
        <item name="alertDialogTheme">@style/CareBridgeAlertDialogTheme</item>
    </style>

    <!-- NO ACTION BAR THEME -->
    <style name="Theme.CareBridgeWear.NoActionBar" parent="Theme.CareBridgeWear">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <!-- CUSTOM BUTTON STYLE -->
    <style name="CareBridgeWearButton" parent="Widget.MaterialComponents.Button">
        <!-- Use Material backgroundTint for proper coloring and ripple -->
        <item name="backgroundTint">@color/black</item>
        <item name="cornerRadius">@dimen/card_corner_radius_large</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="rippleColor">@color/gray_700</item> <!-- Optional ripple -->
    </style>

    <!-- ALERT DIALOG THEME (Wear OS Compatible) -->
    <style name="CareBridgeAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:background">@color/gray_900</item>
    </style>

    <style name="WearDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:backgroundDimAmount">1.0</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="Theme.CareBridgeWear.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.CareBridgeWear.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
